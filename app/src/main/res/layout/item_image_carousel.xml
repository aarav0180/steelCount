<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="160dp"
    android:layout_height="160dp"
    android:layout_margin="10dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="false"
    android:clipChildren="false"
    android:clipToPadding="false">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Image -->
        <ImageView
            android:id="@+id/image_carousel_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:contentDescription="Selected image"
            android:clipToOutline="true"
            android:background="@drawable/baseline_image_24" />

        <!-- Crop Button Background -->
        <View
            android:id="@+id/crop_btn_background"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="top|start"
            android:layout_margin="8dp"
            android:background="@drawable/circle_dark_transparent" />

        <!-- Crop Button -->

        <!-- Remove Button Background -->
        <ImageView
            android:id="@+id/image_crop_btn"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:layout_gravity="top|start"
            android:layout_margin="10dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Crop image"
            android:padding="3dp"
            android:src="@drawable/baseline_crop_free_24" />

        <View
            android:id="@+id/remove_btn_background"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="top|end"
            android:layout_margin="8dp"
            android:background="@drawable/circle_dark_transparent" />

        <!-- Remove Button -->
        <ImageView
            android:id="@+id/image_remove_btn"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:layout_gravity="top|end"
            android:layout_margin="10dp"
            android:padding="3dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:contentDescription="Remove image"
            android:background="?attr/selectableItemBackgroundBorderless" />
    </FrameLayout>
</com.google.android.material.card.MaterialCardView>
